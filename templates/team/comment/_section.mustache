<section class="comments up1c">
    <h2><i class="icon-comment"></i> Comments</h2>
    <div id="comments">
    {{#comments}}
        <div class="comment hi-05">
            <div class="author section hi-05">
                {{#editable}}
                <div class="control section">
                    <a href="#{{url}}/edit" title="Edit">
                        <div class="img"><i class="icon-pencil"></i></div>
                    </a>
                    <a href="#{{url}}/remove" title="Remove">
                        <div class="img"><i class="icon-cancel"></i></div>
                    </a>
                </div>
                {{/editable}}
                {{#member}}
                <a>
                    <div class="img"><i class="{{icon}}"></i></div>
                    <div class="name">{{opts.name}}<span class="date">{{#localTime}}{{created}}{{/localTime}}</span></div>
                </a>
                {{/member}}
                {{^member}}
                <a>
                    <div class="img"><i class="icon-user-1"></i></div>
                    <div class="name">{{opts.member_id}}<span class="date">{{#localTime}}{{created}}{{/localTime}}</span></div>
                </a>
                {{/member}}
            </div>
            <div class="message">{{opts.text}}</div>
        </div>
    {{/comments}}
    </div>
    <form id="comment" name="comment" method="POST" class="std">
        <input type="hidden" name="pid" value="{{id}}" />
        <input type="hidden" name="ptype" value="item" />
        <input type="hidden" name="member_id" value="{{#acct.member}}{{id}}{{/acct.member}}" />
        <h4>Add Comment</h4>
        <div class="field">
            <textarea class="text" name="text"></textarea>
        </div>
        <div class="field submit">
            <input type="submit" class="submit" value="Submit" />
        </div>
        <div class="error"></div>
    </form>
</section>