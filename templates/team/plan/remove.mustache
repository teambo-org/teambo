<div class="plan-remove" require-model="plan">
{{#model.plan.current}}
    <nav class="breadcrumbs">
        <a href="#{{team.url}}/plan" title="Planning"><i class="icon-calendar-check-o"></i></a>
        <a href="#{{url}}" data-keybind="Q" data-keybind-alt="escape" title="Plan"><i class="icon-flag-1"></i></a>
        <span title="Remove Plan"><i class="icon-trash"></i></span>
    </nav>
    <h1><i class="icon-{{icon}}"></i> {{opts.name}}</h1>
    <form id="plan-remove" name="plan_remove" method="POST" class="std ext remove">
        <input type="hidden" class="hidden" name="id" value="{{id}}"/>
        <p>Are you sure you want to remove this plan?</p>
        <div class="field submit">
            <input type="submit" class="submit" value="Remove Plan" id="delete_submit" />
            <br/>
            <a class="cancel" href="#{{url}}">cancel</a>
        </div>
        <div class="error"></div>
    </form>
{{/model.plan.current}}
</div>
