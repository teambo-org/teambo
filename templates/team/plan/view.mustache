<div class="plan-view bucket-view" require-model="plan">
{{#model.plan.current}}
    <nav class="breadcrumbs">
        <a href="#{{team.url}}" class="active" data-keybind="q escape `">Team</a>
        <span class="active">Plan</span>
    </nav>
    <nav>
        <a href="#{{url}}/edit" data-keybind="e">Edit</a>
    </nav>
    <h1><i class="icon-{{icon}}"></i> {{opts.name}} <span class="sub">{{item_count_incomplete}} / {{item_count}}</span></h1>
    {{#opts.start}}
    <div class="up1c">
        {{opts.start}} - {{opts.end}}
    </div>
    {{/opts.start}}
    {{#opts.desc}}
    <div class="up1c">
        <section class="description color-bg">{{opts.desc}}</section>
    </div>
    {{/opts.desc}}
    <a name="skipnav" class="skip-nav" href="#{{url}}"></a>
    <div class="up2c">
        <ul class="items incomplete">
        {{#item_list_incomplete}}
            <li class="item status-{{opts.status}}" id="item-li-{{id}}">
                <a href="#{{url}}" class="hi-05">
                    {{#status}}
                    <i class="icon-{{icon}}" role="img" alt="{{label}}" title="{{label}}"></i>
                    {{/status}}
                    {{#member}}
                        {{#isMe}}
                        <i class="{{icon}} member-icon" title="{{opts.name}}"></i>
                        {{/isMe}}
                        {{^isMe}}
                        <i class="{{icon}} member-icon color-30" title="{{opts.name}}"></i>
                        {{/isMe}}
                    {{/member}}
                    <span class="name">{{opts.name}}</span>
                    {{#opts.description}}
                    <p class="description color-50">{{#nl2br}}{{.}}{{/nl2br}}</p>
                    {{/opts.description}}
                </a>
            </li>
        {{/item_list_incomplete}}
        </ul>
    </div>
    <div class="up2c">
        <ul class="items complete">
        {{#item_list_complete}}
            <li class="item status-{{opts.status}}" id="item-li-{{id}}">
                <a href="#{{url}}">
                    {{#status}}
                    <i class="icon-{{icon}}" title="{{label}}"></i>
                    {{/status}}
                    {{#member}}
                        {{#isMe}}
                        <i class="{{icon}} member-icon color-30" title="{{opts.name}}"></i>
                        {{/isMe}}
                        {{^isMe}}
                        <i class="{{icon}} member-icon color-30" title="{{opts.name}}"></i>
                        {{/isMe}}
                    {{/member}}
                    <span class="name">{{opts.name}}</span>
                    {{#opts.description}}
                    <p class="description color-50">{{#nl2br}}{{.}}{{/nl2br}}</p>
                    {{/opts.description}}
                </a>
            </li>
        {{/item_list_complete}}
        </ul>
    </div>
    {{^item_list}}
    <p class="empty">This plan has no items.</p>
    {{/item_list}}
{{/model.plan.current}}
</div>
