<div class="item-new">
    <nav class="breadcrumbs">
        <a href="#{{team.url}}">Team</a>
        {{#model.plan.current}}
        <a href="#{{url}}" data-keybind="q escape `">Plan</a>
        {{/model.plan.current}}
        {{#model.bucket.current}}
        <a href="#{{url}}" data-keybind="q escape `">Bucket</a>
        {{/model.bucket.current}}
        <span>New Item</span>
    </nav>
    <h1><i class="icon-archive"></i> Create Item</h1>
    <form id="item-new" name="item_new" method="POST" class="std"
        data-plan_id="{{model.plan.current.id}}" data-bucket_id="{{model.bucket.current.id}}">
        <div class="up4c3">
            <div class="field">
                <label for="item_name">Item Name</label>
                <input id="item_name"type="text" class="text large required min-len-2" name="name" autocomplete="off" placeholder="Item Name"/>
            </div>
            <div class="field">
                <label for="item_description">Description</label>
                <textarea id="item_description" class="text large med-tall full" name="description"></textarea>
            </div>
        </div>
        <div class="up4c up4c3b">
            <div class="field">
                <label for="item_bucket">Bucket</label>
                <select id="item_bucket" name="bucket_id" class="text full">
                    <option value="">(none)</option>
                </select>
            </div>
            <div class="field">
                <label for="item_status">Status</label>
                <select id="item_status" name="status" class="text full"></select>
            </div>
            <div class="field">
                <label for="item_plan">Plan</label>
                <select id="item_plan" name="plan_id" class="text full">
                    <option value="">(none)</option>
                </select>
            </div>
            <div class="field">
                <label for="item_member">Member</label>
                <select id="item_member" name="member_id" class="text full">
                    <option value="">(none)</option>
                </select>
            </div>
        </div>
        <div class="field submit">
            <input type="submit" class="submit" value="Create Item" />
            {{#model.plan.current}}
            <a class="cancel" href="#{{url}}">cancel</a>
            {{/model.plan.current}}
            {{#model.bucket.current}}
            <a class="cancel" href="#{{url}}">cancel</a>
            {{/model.bucket.current}}
        </div>
        <div class="error"></div>
    </form>
</div>
