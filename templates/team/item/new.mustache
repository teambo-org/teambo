<div class="item-new">
    <nav class="breadcrumbs">
        <a href="#{{team.url}}">Team</a>
        <a href="#{{bucket.url}}" data-keybind="q escape">Bucket</a>
        <span>New Item</span>
    </nav>
    <h1><i class="icon-folder-open"></i> {{bucket.opts.name}}</h1>
    <form id="item-new" name="item_new" method="POST" class="std">
        <input name="bucket_id" type="hidden" value="{{bucket_id}}"/>
        {{>team/item/_form}}
        <div class="field submit">
            <input type="submit" class="submit" value="Create Item" />
            <a class="cancel" href="#{{bucket.url}}">cancel</a>
        </div>
        <div class="error"></div>
    </form>
</div>
