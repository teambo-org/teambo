<div class="item-view" require-model="item">
{{#model.item.current}}
    <nav class="breadcrumbs">
        <a href="#{{team.url}}">Team</a>
        <a href="#{{#bucket}}{{url}}{{/bucket}}" data-keybind="q escape `">Bucket</a>
        <span>Item</span>
    </nav>
    <nav>
        <a href="#{{url}}/remove" data-keybind="r">Remove</a>
        <a href="#{{url}}/edit" data-keybind="e">Edit</a>
    </nav>
    <h1>{{#status}}<i class="icon-{{icon}}"></i>{{/status}} {{opts.name}}</h1>
    <div class="up4c3">
    {{#opts.description}}
        <section class="description color-bg" role="main">
            {{#nl2br}}{{#linkify}}{{opts.description}}{{/linkify}}{{/nl2br}}
        </section>
    {{/opts.description}}
    </div>
    <div class="up4c up4c3b">
        <section class="tags">
            <ul>
                {{#status}}
                <li class="state section autoselect" data-opt="status">
                    <a href="#{{url}}/edit" class="trigger">
                        <i class="icon-down-open-1 nav color-hi-40"></i>
                        <div class="img"><i class="icon-{{icon}}"></i></div>
                        <div class="name">{{label}}</div>
                    </a>
                    <div class="options">
                        {{#model.item.statuses}}
                        <a data-value="{{key}}">
                            <div class="img {{^active}}color-30{{/active}}"><i class="icon-{{icon}}"></i></div>
                            <div class="name">{{label}}</div>
                        </a>
                        {{/model.item.statuses}}
                    </div>
                </li>
                {{/status}}
                <li class="state section autoselect" data-opt="bucket_id">
                    {{#bucket}}
                    <a href="#{{url}}/edit" class="trigger {{#fake}}color-30{{/fake}}">
                        <i class="icon-down-open-1 nav color-hi-40"></i>
                        <div class="img"><i class="icon-{{icon}}"></i></div>
                        <div class="name">{{opts.name}}</div>
                    </a>
                    {{/bucket}}
                    <div class="options">
                        {{#model.bucket.all}}
                        <a data-value="{{id}}">
                            <div class="img {{^active}}color-30{{/active}}"><i class="icon-{{icon}}"></i></div>
                            <div class="name">{{opts.name}}</div>
                        </a>
                        {{/model.bucket.all}}
                        <a data-value="">
                            <div class="img {{#bucket}}color-30{{/bucket}}"><i class="icon-folder"></i></div>
                            <div class="name">(none)</div>
                        </a>
                    </div>
                </li>
                <li class="plan section autoselect" data-opt="plan_id">
                    {{#plan}}
                    <a href="#{{url}}" class="trigger">
                        <i class="icon-down-open-1 nav color-hi-40"></i>
                        <div class="img"><i class="icon-{{icon}}"></i></div>
                        <div class="name">{{opts.name}}</div>
                    </a>
                    {{/plan}}
                    {{^plan}}
                    <a href="#{{url}}" class="trigger color-30">
                        <i class="icon-down-open-1 nav"></i>
                        <div class="img"><i class="icon-flag-1"></i></div>
                        <div class="name">(none)</div>
                    </a>
                    {{/plan}}
                    <div class="options">
                        {{#model.plan.all}}
                        <a data-value="{{id}}">
                            <div class="img {{^active}}color-30{{/active}}"><i class="icon-{{icon}}"></i></div>
                            <div class="name">{{opts.name}}</div>
                        </a>
                        {{/model.plan.all}}
                        <a data-value="">
                            <div class="img {{#plan}}color-30{{/plan}}"><i class="icon-flag-1"></i></div>
                            <div class="name">(none)</div>
                        </a>
                    </div>
                </li>
                <li class="member section autoselect" data-opt="member_id">
                    {{#member}}
                    <a href="#{{url}}" class="trigger">
                        <i class="icon-down-open-1 nav color-hi-40"></i>
                        <div class="img"><i class="{{icon}}"></i></div>
                        <div class="name">{{opts.name}}</div>
                    </a>
                    {{/member}}
                    {{^member}}
                    <a href="#{{url}}" class="trigger color-30">
                        <i class="icon-down-open-1 nav"></i>
                        <div class="img"><i class="icon-user-1"></i></div>
                        <div class="name">(none)</div>
                    </a>
                    {{/member}}
                    <div class="options">
                        {{#model.member.all}}
                        <a data-value="{{id}}">
                            <div class="img {{^active}}color-30{{/active}}"><i class="{{icon}}"></i></div>
                            <div class="name">{{opts.name}}</div>
                        </a>
                        {{/model.member.all}}
                        <a data-value="">
                            <div class="img {{#member}}color-30{{/member}}"><i class="icon-user-1"></i></div>
                            <div class="name">(none)</div>
                        </a>
                    </div>
                </li>
                <li class="section">
                    <a>
                        <div class="img"><i class="icon-tag-1"></i></div>
                        <div class="name">UI</div>
                    </a>
                </li>
            </ul>
        </section>
    </div>
    <section class="comments up1c">
        <h2><i class="icon-comment"></i> Comments</h2>
        <div id="comments">
        {{#comments}}
            <div class="comment hi-05">
                <div class="author section hi-05">
                    {{#editable}}
                    <div class="control section">
                        <a href="#{{url}}/edit" title="Edit">
                            <div class="img"><i class="icon-pencil"></i></div>
                        </a>
                        <a href="#{{url}}/remove" title="Remove">
                            <div class="img"><i class="icon-cancel"></i></div>
                        </a>
                    </div>
                    {{/editable}}
                    {{#member}}
                    <a>
                        <div class="img"><i class="{{icon}}"></i></div>
                        <div class="name">{{opts.name}}<span class="date">{{#localTime}}{{created}}{{/localTime}}</span></div>
                    </a>
                    {{/member}}
                    {{^member}}
                    <a>
                        <div class="img"><i class="icon-user-1"></i></div>
                        <div class="name">{{opts.member_id}}<span class="date">{{#localTime}}{{created}}{{/localTime}}</span></div>
                    </a>
                    {{/member}}
                </div>
                <div class="message">{{opts.text}}</div>
            </div>
        {{/comments}}
        </div>
        <form id="comment" name="comment" method="POST" class="std">
            <input type="hidden" name="pid" value="{{id}}" />
            <input type="hidden" name="ptype" value="item" />
            <input type="hidden" name="member_id" value="{{#acct.member}}{{id}}{{/acct.member}}" />
            <h4>Add Comment</h4>
            <div class="field">
                <textarea class="text" name="text"></textarea>
            </div>
            <div class="field submit">
                <input type="submit" class="submit" value="Submit" />
            </div>
            <div class="error"></div>
        </form>
    </section>
    <section class="history up1c"><div class="c">
        <h2><i class="icon-clock"></i> History</h2>
        <ul class="history">
        {{#history}}
            <li data-iv="{{iv}}" class="hi-05 color-50">
                <div class="hi-05 color-70 section">
                {{#member}}
                    <div class="img"><i class="{{icon}}"></i></div>
                    <div class="name">
                        <a class="value color-70" href="#{{url}}">{{opts.name}}</a>
                        <span class="date">{{#localTime}}{{ts}}{{/localTime}}</span>
                    </div>
                {{/member}}
                {{^member}}
                    <div class="img"><i class="icon-user-1"></i></div>
                    <div class="name">
                        (unknown member) {{diff.member_id}}
                        <span class="date">{{#localTime}}{{ts}}{{/localTime}}</span>
                    </div>
                {{/member}}
                </div>
                <div class="diff">
                    {{#diff_name}}
                    <div class="name"><span class="k">Name</span> changed to <span class="value color-70">{{diff.name}}</span></div>
                    {{/diff_name}}
                    {{#diff_description}}
                        {{#diff.description}}
                        <div class="description text">
                            <span class="k">Description</span> {{#first}}set{{/first}}{{^first}}changed{{/first}} <a data-toggle="history-description-{{iv}}"><i class="icon-angle-down"></i></a>
                            <p class="value color-70 description toggle-target hi-05" data-toggle-target="history-description-{{iv}}">{{#nl2br}}{{diff.description}}{{/nl2br}}</p>
                        </div>
                        {{/diff.description}}
                        {{^diff.description}}{{^first}}
                        <div class="description text">
                            <span class="k">Description</span> removed
                        </div>
                        {{/first}}{{/diff.description}}
                    {{/diff_description}}
                    {{#diff_status}}
                    <div class="status"><span class="k">Status</span> {{#first}}set{{/first}}{{^first}}changed{{/first}} to <span class="value color-70">{{#status}}{{label}}{{/status}}</span></div>
                    {{/diff_status}}
                    {{#diff_bucket_id}}
                    <div class="bucket_id">
                        {{#first}}Added{{/first}}{{^first}}Moved{{/first}} to
                        {{#bucket}}<a class="value color-70" href="#{{url}}"><i class="icon-{{icon}}"></i>{{opts.name}}</a>{{/bucket}}{{^bucket}}deleted bucket {{diff.bucket_id}}{{/bucket}}
                    </div>
                    {{/diff_bucket_id}}
                    {{#diff_plan_id}}
                        {{#diff.plan_id}}
                        <div class="plan_id">
                            {{#first}}Added{{/first}}{{^first}}Moved{{/first}} to
                            {{#plan}}<a class="value color-70" href="#{{url}}"><i class="icon-{{icon}}"></i>{{opts.name}}</a>{{/plan}}{{^plan}}deleted plan {{diff.plan_id}}{{/plan}}</div>
                        {{/diff.plan_id}}
                        {{^diff.plan_id}}{{^first}}
                        <div class="plan_id">Removed from planning</div>
                        {{/first}}{{/diff.plan_id}}
                    {{/diff_plan_id}}
                    {{#diff_member_id}}
                        {{#diff.member_id}}
                        <div class="member_id">Assigned to {{#assignee}}<a class="value color-70" href="#{{url}}"><i class="{{icon}}"></i>{{opts.name}}</a>{{/assignee}}{{^assignee}}deleted member {{diff.member_id}}{{/assignee}}</div>
                        {{/diff.member_id}}
                        {{^diff.member_id}}
                        <div class="member_id">Unassigned</div>
                        {{/diff.member_id}}
                    {{/diff_member_id}}
                </div>
            </li>
        {{/history}}
        </ul>
    </div></section>
{{/model.item.current}}
</div>
