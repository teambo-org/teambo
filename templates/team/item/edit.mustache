<div class="item-edit" require-model="item">
{{#model.item.current}}
    <nav class="breadcrumbs">
        <a href="#{{team.url}}">Team</a>
        {{#model.plan.current}}
        <a href="#{{url}}" data-keybind="q escape `">Plan</a>
        {{/model.plan.current}}
        {{^model.plan.current}}
        <a href="#{{#folder}}{{url}}{{/folder}}" data-keybind="q escape `">Folder</a>
        {{/model.plan.current}}
        <a href="#{{url}}" data-keybind="q escape `">Item</a>
        <span>Edit</span>
    </nav>
    <h1><i class="icon-archive"></i> Edit Item</h1>
    <form id="item-edit" name="item_edit" method="POST" class="std" data-item_id="{{id}}">
        <div class="up4c3">
            <div class="field">
                <label for="item_name">Item Name</label>
                <input id="item_name"type="text" class="text large full required min-len-2" name="name" autocomplete="off" placeholder="Item Name" value="{{opts.name}}" />
            </div>
            <div class="field">
                <label for="item_description">Description</label>
                <textarea id="item_description" class="text med-tall full" name="description">{{opts.description}}</textarea>
            </div>
        </div>
        <div class="up4c up4c3b">
            <div class="field">
                <label for="item_folder">Folder</label>
                <select id="item_folder" name="folder_id" class="text full">
                    <option value="">(none)</option>
                </select>
            </div>
            <div class="field">
                <label for="item_status">Status</label>
                <select id="item_status" name="status" class="text full"></select>
            </div>
            <div class="field">
                <label for="item_plan">Plan</label>
                <select id="item_plan" name="plan_id" class="text full">
                    <option value="">(none)</option>
                </select>
            </div>
            <div class="field">
                <label for="item_member">Member</label>
                <select id="item_member" name="member_id" class="text full">
                    <option value="">(none)</option>
                </select>
            </div>
        </div>
        <div class="field submit">
            <input type="submit" class="submit" value="Save Changes" />
            <a class="cancel" href="#{{url}}">cancel</a>
        </div>
        <div class="error"></div>
    </form>
{{/model.item.current}}
</div>
