<div class="team-remove">
{{#team}}
    <nav class="breadcrumbs">
        <a href="#{{team.url}}/settings" data-keybind="Q" data-keybind-alt="escape" title="Team Settings"><i class="icon-cog"></i></a>
        <span title="Delete Team"><i class="icon-trash"></i></span>
    </nav>
    <h1><i class="icon-attention"></i> Delete Team</h1>
    <form id="team-remove" name="team_remove" method="POST" class="std ext remove">
        <p class="email">Are you sure you want to delete this team?</p>
        <div class="field">
            <h4>{{team.opts.name}}</h4>
        </div>
        <div class="field">
            <input id="team_name" type="text" class="text" name="name" autocomplete="off" placeholder="Team Name" />
        </div>
        <div class="field submit">
            <input type="submit" class="submit" id="delete_submit" value="Delete Team" />
            <br/>
            <a class="cancel" href="#{{url}}">cancel</a>
        </div>
        <div class="error"></div>
    </form>
{{/team}}
</div>
