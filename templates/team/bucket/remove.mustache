<div class="bucket-remove" require-model="bucket">
{{#bucket.current}}
    <nav class="breadcrumbs">
        <a href="#{{team.url}}">Team</a>
        <a href="#{{url}}" data-keybind="q escape `">Bucket</a>
        <span>Remove</span>
    </nav>
    <h1><i class="icon-folder-open"></i> {{opts.name}}</h1>
    <form id="bucket-remove" name="bucket_remove" method="POST" class="std ext remove">
        <input type="hidden" class="hidden" name="id" value="{{id}}"/>
        <p>Are you sure you want to remove this bucket?</p>
        <div class="field submit">
            <input type="submit" class="submit" value="Remove Bucket" id="delete_submit" />
            <br/>
            <a class="cancel" href="#{{url}}">cancel</a>
        </div>
        <div class="error"></div>
    </form>
{{/bucket.current}}
</div>
