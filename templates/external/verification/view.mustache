<div class="external require-no-auth c">
    <div id="logo" class="logo"></div>
    <form name="verification" method="POST" class="std ext verification"
        data-reset="{{reset}}" data-email="{{email}}" data-pass="{{pass}}" data-ikey="{{ikey}}">
        <div class="field first">
            <p class="email">{{email}}</p>
            {{#reset}}
            <!--
            <p class="warning">
                You may create more than one account with the same email address. Each account must
                have a different password.
            </p>
            -->
            {{/reset}}
            <p class="warning">
                In order to create a new account you will first need to confirm your
                {{#reset}} new{{/reset}} password and verify your email address.
            </p>
            <p class="exc">
                <span class="alert">DO NOT FORGET YOUR PASSWORD</span><br/>
                Account passwords can not be recovered or reset!<br/><br/>
            </p>
        </div>
        <div class="field">
            <input type="password" class="text pass" name="verify_pass" placeholder="Confirm Password" />
        </div>
        <div class="field">
        {{#ikey}}
            <input type="text" class="text" name="invite" value="{{ikey}}" />
            <a href="#" id="clear-ikey" class="clear-invite">Clear Invite Code</a>
        {{/ikey}}
        {{^ikey}}
            <input type="text" class="text" name="beta" placeholder="Beta Code" />
        {{/ikey}}
        </div>
        <div class="field">
            <label for="tos" class="chk">
                <input id="tos" type="checkbox" class="chk" name="tos" />
                I understand and agree to the Terms of Service and Privacy Policy
            </label>
        </div>
        <div class="field submit">
            <input type="submit" class="submit" value="Send Verification Email" />
            <br/><br/>
            <a class="cancel force" href="#/login" data-keybind="escape q">cancel</a>
        </div>
        <div class="error"></div>
    </form>
    <br>
    <br>
    <br>
</div>
