<div class="external require-no-auth c">
    <div id="logo" class="logo"></div>
    <div class="main">
    <form name="verification" method="POST" class="std ext verification"
        data-reset="{{reset}}" data-email="{{email}}" data-pass="{{pass}}" data-ikey="{{ikey}}">
        <div class="field first">
            <p class="email">{{email}}</p>
            <p class="warning">
                In order to create a new account you will first need to confirm your
                new password{{^ikey}} and verify your email address{{/ikey}}.
            </p>
            <p class="exc">
                <span class="alert">DO NOT FORGET YOUR PASSWORD</span><br/>
                Account passwords can not be recovered or reset!<br/><br/>
            </p>
        </div>
        <div class="field">
            <input type="password" class="text pass" name="pass" placeholder="Password" />
            <div id="pass-meter"><div id="pass-meter-bar"></div></div>
        </div>
        <div class="field">
            <input type="password" class="text pass" name="verify_pass" placeholder="Confirm Password" />
        </div>
        <div class="field">
            <input type="text" class="text" name="beta" placeholder="Beta Code" value="{{ikey}}"/>
        </div>
        <div class="field">
            <label for="tos" class="chk">
                <input id="tos" type="checkbox" class="chk" name="tos" />
                I understand and agree to the Terms of Service and Privacy Policy
            </label>
        </div>
        <div class="field">
            <label for="newsletter" class="chk">
                <input id="newsletter" type="checkbox" class="chk" name="newsletter" />
                Subscribe to Newsletter
            </label>
        </div>
        <div class="field submit">
            <input type="submit" class="submit" value="{{#ikey}}Submit{{/ikey}}{{^ikey}}Send Verification Email{{/ikey}}" />
            <br/><br/>
            <a class="cancel" href="#/login" data-keybind="escape q">cancel</a>
        </div>
        <div class="error"></div>
    </form>
    </div>
    <br>
    <br>
    <br>
</div>
