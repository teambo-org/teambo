<div class="external require-auth c">
    <div id="logo" class="logo"></div>
    <form name="remove_team" class="std ext" data-team_id="{{tid}}">
        <div class="field first">
            <p>This team appears to be missing<br/><br/></p>
            {{#app.online}}
            <p class="ex">
                The team was probably deleted. You can either return to the
                account page and wait for this issue to resolve itself or you can remove the team
                from your list of teams{{^app.online}} the next time you are online{{/app.online}}.
            </p>
            {{/app.online}}
        </div>
        <div class="field submit">
            <a href="#/account" data-keybind="escape q"><i class="icon-angle-left"></i>Back to account</a>
            {{#app.online}}
            <br/><br/><br/>
            <input type="submit" class="submit" value="Remove Team" />
            {{/app.online}}
        </div>
    </form>
</div>
