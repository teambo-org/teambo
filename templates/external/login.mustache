<div class="external require-no-auth c">
    <div id="logo" class="logo" alt="Teambo"></div>
    <form id="auth" name="auth" method="POST" class="std ext" data-vkey="{{vkey}}">
        <div id="status"></div>
        <div class="field">
            <input type="email" class="text required" name="email" placeholder="Email Address" />
        </div>
        <div class="field">
            <input type="password" class="text pass required min-len-8" name="pass" placeholder="Password" />
        </div>
        {{#app.remember_me}}
        <div class="field">
            <label for="remember_me" class="chk">
                <input id="remember_me" type="checkbox" class="chk" name="remember_me" />
                Remember Me
            </label>
        </div>
        {{/app.remember_me}}
        <div class="field submit">
            <input id="submit" type="submit" class="submit" value="Submit" />
        </div>
        <div class="error"></div>
    </form>
    <div class="subtext" id="onboarding">
        <p>Enter your email address and password to log in<br/><br/>
        <a href="#/signup" class="create-account">Create a New Account<i class="icon-angle-right"></i></a>
        </p>
    </div>
</div>
