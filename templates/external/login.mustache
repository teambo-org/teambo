<div class="external require-no-auth c" data-tpljs="external/login">
    <div id="logo" class="logo" alt="Teambo"></div>
    <form id="auth" name="auth" method="POST" class="std ext" data-vkey="{{vkey}}">
        <div class="field">
            <input type="email" class="text required" name="email" placeholder="Email Address" />
        </div>
        <div class="field">
            <input type="password" class="text pass required min-len-8" name="pass" placeholder="Password" />
        </div>
        <div class="field submit">
            <input id="submit" type="submit" class="submit" value="Submit" />
        </div>
        <div class="error"></div>
    </form>
    <div class="subtext" id="onboarding">
        <p>Enter your email address and choose a password<br/>or log in using an existing password</p>
    </div>
</div>
