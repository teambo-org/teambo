<div class="external require-no-auth c">
    <div id="logo" class="logo" alt="Teambo"></div>
    <div class="main">
    <form id="unlock" name="unlock" method="POST" class="std ext" data-id="{{id}}" data-rkey="{{rkey}}">
        <div id="status"></div>
        <div class="field">
            <input type="email" id="email" class="text required" name="email" placeholder="Email Address" value="{{email}}"/>
        </div>
        <div class="field submit">
            <input id="submit" type="submit" class="submit" value="Unlock Account" />
        </div>
        <div class="error"></div>
    </form>
    <div class="subtext" id="onboarding">
        <p>
            Enter your email address to send account unlock email<br/>
            <a href="#/login" class="bot-nav"><i class="icon-angle-left"></i>Back to Login<i class="icon-blank"></i></a>
        </p>
    </div>
    </div>
</div>
