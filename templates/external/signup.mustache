<div class="external require-no-auth c">
    <div id="logo" class="logo" alt="Teambo"></div>
    <form id="auth" name="auth" method="POST" class="std ext" data-ikey="{{ikey}}">
        <div id="status"></div>
        <div class="field">
            <input type="email" class="text required" name="email" placeholder="Email Address" />
        </div>
        <div class="field">
            <input type="password" class="text pass required min-len-8" name="pass" placeholder="New Password" />
        </div>
        <div class="field submit">
            <input id="submit" type="submit" class="submit" value="Create Account" />
        </div>
        <div class="error"></div>
    </form>
    <div class="subtext" id="onboarding">
        <p>
            Enter your email address and choose a password<br/>
            <a href="#/login" class="create-account"><i class="icon-angle-left"></i>Back to Login<i class="icon-blank"></i></a>
        </p>
    </div>
    <div class="subtext">
        <p class="about-link">
            <a href="#/about">
                What is Teambo?<br/>
                <i class="icon-angle-down"></i>
            </a>
        </p>
    </div>
</div>
