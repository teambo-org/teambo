<div class="bucket-edit" data-tpljs="index/bucket-edit">
    <nav class="breadcrumbs">
        <a href="#{{team.url}}">Team</a>
        <a href="#{{bucket.url}}" data-keybind="q escape">Bucket</a>
        <span>Edit</span>
    </nav>
    <h1><i class="icon-flag-filled"></i> {{bucket.opts.name}}</h1>
    <form id="bucket-edit" name="bucket_edit" method="POST" class="std" data-bucket_id="{{bucket.id}}">
        <div class="field">
            <label for="bucket_name">Name</label>
            <input id="bucket_name" type="text" class="text required min-len-2" name="name" autocomplete="off" placeholder="Bucket Name" value="{{bucket.opts.name}}" />
        </div>
        <div class="field">
            <label for="bucket_description">Description</label>
            <textarea id="bucket_description" class="text" name="description">{{bucket.opts.description}}</textarea>
        </div>
        <div class="field submit">
            <input type="submit" class="submit" value="Save" />
            <a class="cancel" href="#{{bucket.url}}">cancel</a>
        </div>
        <div class="error"></div>
    </form>
</div>
