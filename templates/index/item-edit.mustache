<div class="item-edit" data-tpljs="index/item-edit">
    <nav class="breadcrumbs">
        <a href="#{{team.url}}">Team</a>
        <a href="#{{bucket.url}}">Bucket</a>
        <a href="#{{item.url}}" data-keybind="q escape">Item</a>
        <span>Edit</span>
    </nav>
    <h1>{{#item.status}}<i class="icon-{{icon}}"></i>{{/item.status}} {{item.opts.name}}</h1>
    <form id="item-edit" name="item_edit" method="POST" class="std" data-bucket_id="{{bucket_id}}" data-item_id="{{item.id}}">
        {{>index/_item-form}}
        <div class="field">
            <label for="item_bucket">Bucket</label>
            <select id="item_bucket" name="bucket_id" class="text large"></select>
        </div>
        <div class="field submit">
            <input type="submit" class="submit" value="Save Changes" />
            <a class="cancel" href="#{{item.url}}">cancel</a>
        </div>
        <div class="error"></div>
    </form>
</div>
