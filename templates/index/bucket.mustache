<div class="bucket require-auth require-team">
    <nav>
        <a href="#/{{team.id}}/{{bucket.id}}/remove" data-keybind="d">Delete</a>
        <a href="#/{{team.id}}/{{bucket.id}}/edit" data-keybind="e">Edit</a>
        <a href="#/{{team.id}}/{{bucket.id}}/new" data-keybind="n">New Item</a>
    </nav>
    <nav class="breadcrumbs">
        <a href="#/{{team.id}}" class="active" data-keybind="b escape">Team</a>
        <span class="active">Bucket</span>
    </nav>
    <h1><i class="icon-flag-filled"></i> {{bucket.opts.name}}</h1>
    <ul class="items" id="items">
    {{#bucket.item_list}}
    <li class="item" id="item-li-{{id}}">
        <a href="#/{{team.id}}/{{bucket.id}}/{{id}}">
            {{#status}}
            <i class="icon-{{icon}}"></i>
            {{/status}}
            <span class="name">{{opts.name}}</span>
        </a>
    </li>
    {{/bucket.item_list}}
    {{^bucket.item_list}}
    <p>This bucket has no items.</p>
    {{/bucket.item_list}}
    </ul>
</div>
