<div class="bucket require-auth require-team" data-tpljs="index/bucket">
    <nav>
        <a href="#/{{team.id}}/{{bucket.id}}/remove" data-keybind="r">Remove</a>
        <a href="#/{{team.id}}/{{bucket.id}}/edit" data-keybind="e">Edit</a>
        <a href="#/{{team.id}}/{{bucket.id}}/new" data-keybind="c">Create Item</a>
    </nav>
    <nav class="breadcrumbs">
        <a href="#/{{team.id}}" class="active" data-keybind="q escape">Team</a>
        <span class="active">Bucket</span>
    </nav>
    <h1><i class="icon-flag-filled"></i> {{bucket.opts.name}}</h1>
    {{#bucket.opts.description}}
    <p class="description">{{.}}</p>
    {{/bucket.opts.description}}
    <a name="skipnav" class="skip-nav" href="#/{{team.id}}/{{bucket.id}}"></a>
    <div class="up2"><div class="up2l">
        <ul class="items incomplete">
        {{#bucket.item_list_incomplete}}
            <li class="item status-{{opts.status}}" id="item-li-{{id}}">
                <a href="#/{{team.id}}/{{bucket.id}}/{{id}}" title="{{opts.status}}">
                    {{#status}}
                    <i class="icon-{{icon}}" role="img" alt="{{label}}"></i>
                    {{/status}}
                    <span class="name">{{opts.name}}</span>
                </a>
            </li>
        {{/bucket.item_list_incomplete}}
        </ul>
    </div><div class="up2r">
        <ul class="items complete">
        {{#bucket.item_list_complete}}
            <li class="item status-{{opts.status}}" id="item-li-{{id}}">
                <a href="#/{{team.id}}/{{bucket.id}}/{{id}}">
                    {{#status}}
                    <i class="icon-{{icon}}"></i>
                    {{/status}}
                    <span class="name">{{opts.name}}</span>
                </a>
            </li>
        {{/bucket.item_list_complete}}
        </ul>
    </div></div>
    {{^bucket.item_list}}
    <p>This bucket has no items.</p>
    {{/bucket.item_list}}
</div>
