<div class="plan-index folder-index" id="plan-index">
    <nav class="breadcrumbs icon-nav">
        <a href="#{{team.url}}" class="active invisible" data-keybind="Q" data-keybind-alt="escape"></a>
        <span title="Planning"><i class="icon-calendar-check-o"></i></span>
    </nav>
    <nav>
        <a href="#{{team.url}}/plan/new" data-keybind="C" title="Create Plan"><i class="icon-flag-add"></i></a>
    </nav>
    <h1><div class="img"><i class="icon-calendar-check-o"></i></div> Planning</h1>
    <div class="up1c">
        <form class="std horizontal color-bg filter" name="filter">
            <select name="status" class="text">
                <option value="" selected="selected">All Statuses</option>
                <option value="incomplete">Incomplete</option>
                {{#model.item.statuses}}
                <option value="{{key}}">{{label}}</option>
                {{/model.item.statuses}}
            </select>
            <select name="member_id" class="text">
                <option value="" selected="selected">All Members</option>
                {{#model.member.all}}
                <option value="{{id}}">{{opts.name}}</option>
                {{/model.member.all}}
                <option value="none">(unassigned)</option>
            </select>
            <a class="clear" href="#{{team.url}}/plan?status=&plan_id=&member_id="><i class="icon icon-cancel"></i></a>
        </form>
    </div>
    <a id="skipnav" class="skip-nav" href="#{{team.url}}"></a>
    <ul class="model plans" id="plans">
    {{#model.plan.all}}
        <li class="plan folder hi-10 up3c" id="plan-li-{{id}}">
            <a href="#{{url}}" class="hi-05">
                <i class="icon-{{icon}}"></i>
                <div class="info">{{item_count_incomplete}} / {{item_count}}</div>
                <span class="name">{{opts.name}}</span>
                <div class="progress hi-15" data-progress="{{progress}}"></div>
            </a>
            <ul class="items">
            {{#item_collection}}
            {{#each}}
                {{>team/item/_li}}
            {{/each}}
            {{#empty}}
                <p class="empty color-30">None</p>
            {{/empty}}
            {{/item_collection}}
            </ul>
        </li>
    {{/model.plan.all}}
    {{^model.plan.all}}
        <p class="empty">Team has no plans</p>
    {{/model.plan.all}}
    </ul>
</div>
