<div class="item-edit" require-model="item">
{{#model.item.current}}
    <nav class="breadcrumbs">
        <a href="#{{team.url}}/planning" class="hi-20" title="Planning"><i class="icon-calendar-check-o"></i></a>
        {{#model.plan.current}}
        <a href="#{{url}}" title="Plan"><i class="icon-{{icon}}"></i></a>
        {{/model.plan.current}}
        {{^model.plan.current}}
        {{#folder}}<a href="#{{url}}"><i class="icon-{{icon}}"></i></a>{{/folder}}
        {{/model.plan.current}}
        <a href="#{{url}}" data-keybind="Q" data-keybind-alt="escape" title="Item"><i class="icon-{{icon}}"></i></a>
        <span title="Edit Item"><i class="icon-edit"></i></span>
    </nav>
    <nav>
        <a href="#{{url}}/remove" data-keybind="R" title="Remove Item"><i class="icon-trash"></i></a>
    </nav>
    <h1><i class="icon-archive"></i> Edit Item</h1>
    <a id="skipnav" class="skip-nav" href="#{{url}}/edit"></a>
    <div class="up1c">
        <form id="item-edit" name="item_edit" method="POST" class="std item-form" data-item_id="{{id}}">
            <div class="up1c">
                <input id="item_name"type="text" class="text large full required min-len-2" name="name" autocomplete="off" placeholder="Item Name" value="{{opts.name}}" />
            </div>
            <div class="up4c3">
                <textarea id="item_description" class="text med-tall full" name="description">{{opts.description}}</textarea>
            </div>
            <div class="up4c up4c3b" id="item-opts">
                {{>team/item/_sidenav}}
            </div>
            <div class="field submit">
                <input type="submit" class="submit" value="Save Changes" />
                <a class="cancel" href="#{{url}}">cancel</a>
            </div>
            <div class="error"></div>
        </form>
    </div>
{{/model.item.current}}
</div>
